<div class="card">
  <%= link_to mariage_path(mariage.id),method: :get do %>
    <% mariage.images.each do |image| %>
      <%= image_tag mariage.images[0], class:'card__img' %>
      <% break %>
    <% end %>
  <% end%>
  <div class="card__body">
    <%= link_to mariage.title, mariage_path(mariage.id), class: :card__title, method: :get %>
  </div>
</div> 
