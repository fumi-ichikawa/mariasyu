
<style>
.header {
  display: none;
}
body {
  padding-top: 0;
}
</style>

<%= render "shared/second-header"%>

<%= form_with model: current_user, url: user_path, class: 'registration-main', local: true do |f| %>

  <div class="form-wrap">
    <div class='form-header'>
      <h2 class="form-header-text">
        <%= @user.nickname + "さんの会員情報編集" %>
      </h2>
    </div>

    <%= render 'shared/error_messages', model: f.object %>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">ニックネーム</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :nickname, class:"input-default", id:"nickname", placeholder:"例) ぽん酒タロウ", maxlength:"40" %>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">メールアドレス</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
    </div>

      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">変更前のパスワード</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.password_field :current_password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
      </div>

      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">新しいパスワード</label>
          <p class="guide_text">変更する場合のみ入力</p>
        </div>
        <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字", autocomplete: "new-password" %>
        <p class='info-text'>※英字と数字の両方を含めることを推奨</p>
      </div>

      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">新しいパスワード(確認)</label>
          <p class="guide_text">変更する場合のみ入力</p>
        </div>
        <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい", autocomplete: "new-password" %>
      </div>

    <%= f.submit "会員情報変更", class:"form-btn"%>
  </div>
<% end %>
<%= render "shared/second-footer"%>